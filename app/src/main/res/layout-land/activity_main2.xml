<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.diarranabe.calculator.calculator.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="513dp"
        android:layout_height="49dp"
        android:layout_weight="0.41"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@android:color/holo_blue_bright"
        android:textSize="46sp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewHaut"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textViewHaut"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewHaut" />

    <TextView
        android:id="@+id/textViewHaut"
        android:layout_width="512dp"
        android:layout_height="27dp"
        android:layout_weight="0.09"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/btnplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnminus"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btnminus" />

    <Button
        android:id="@+id/btnplusminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn1"
        android:text="+/-"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="/"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/btndel"
        android:layout_marginRight="31dp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnplusminus"
        android:layout_alignBottom="@+id/btnplusminus"
        android:layout_toEndOf="@+id/btnplusminus"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/btnplusminus"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btncomma"
        android:layout_below="@+id/btn6"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/btncomma"
        app:layout_constraintLeft_toLeftOf="@+id/btn6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btncomma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn3"
        android:layout_toStartOf="@+id/btnequal"
        android:text=","
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn3" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn1"
        android:layout_alignBottom="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:text="2"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn0"
        app:layout_constraintLeft_toLeftOf="@+id/btn5"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/btnminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnmulti"
        android:text="-"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnmulti"
        app:layout_constraintRight_toRightOf="@+id/btnmulti"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnplus" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn7"
        android:text="4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn7" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnc"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/btn2"
        android:text="8"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toRightOf="@+id/btn7"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn3"
        android:layout_below="@+id/btn9"
        android:text="6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn9"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn9" />

    <Button
        android:id="@+id/btnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn8"
        android:text="C"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btnce"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnce"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnequal" />

    <Button
        android:id="@+id/btnce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:text="CE"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btndel"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btndel"
        app:layout_constraintLeft_toRightOf="@+id/btnmulti"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.69" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn4"
        android:text="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnplusminus"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btndel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn9"
        android:text="del"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn8"
        android:layout_below="@+id/btn8"
        android:text="5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn8"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btn8" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnplus"
        android:text="="
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btnc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnmulti"
        android:layout_alignBottom="@+id/btnmulti"
        android:layout_toStartOf="@+id/btnmulti"
        android:text="9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toRightOf="@+id/btn8"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btndiv"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn8"
        android:layout_alignBottom="@+id/btn8"
        android:layout_toStartOf="@+id/btn8"
        android:text="7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnmulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btndiv"
        android:layout_marginTop="8dp"
        android:text="x"
        app:layout_constraintTop_toBottomOf="@+id/btndiv"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btndiv" />

</android.support.constraint.ConstraintLayout>
