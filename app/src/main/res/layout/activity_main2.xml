<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.diarranabe.calculator.calculator.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/textViewHaut"
            android:layout_width="358dp"
            android:layout_height="32dp"
            android:textAlignment="viewEnd"
            android:textSize="24sp"
            android:layout_weight="0.09" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="358dp"
            android:layout_height="79dp"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/holo_green_dark"
            android:textColorLink="@android:color/holo_blue_bright"
            android:textSize="46sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="349dp">

            <Button
                android:id="@+id/btnplusminus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn1"
                android:text="+/-" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btnplusminus"
                android:layout_alignBottom="@+id/btnplusminus"
                android:layout_toEndOf="@+id/btnplusminus"
                android:text="0" />

            <Button
                android:id="@+id/btncomma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=","
                android:layout_below="@+id/btn3"
                android:layout_toStartOf="@+id/btnequal" />

            <Button
                android:id="@+id/btnequal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_below="@+id/btnplus"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn4"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btn1"
                android:layout_alignBottom="@+id/btn1"
                android:layout_toEndOf="@+id/btn1"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_below="@+id/btn6"
                android:layout_alignStart="@+id/btncomma" />

            <Button
                android:id="@+id/btnplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_below="@+id/btnminus"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn7"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btn4"
                android:layout_alignBottom="@+id/btn4"
                android:layout_toEndOf="@+id/btn4"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_below="@+id/btn9"
                android:layout_alignStart="@+id/btn3" />

            <Button
                android:id="@+id/btnminus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_below="@+id/btnmulti"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btnce"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnc"
                android:layout_toEndOf="@+id/btn7"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_alignBaseline="@+id/btnmulti"
                android:layout_alignBottom="@+id/btnmulti"
                android:layout_toStartOf="@+id/btnmulti" />

            <Button
                android:id="@+id/btnmulti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:layout_below="@+id/btndiv"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/btnce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="CE" />

            <Button
                android:id="@+id/btnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btnce" />

            <Button
                android:id="@+id/btndel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="del"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/btn9" />

            <Button
                android:id="@+id/btndiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
